<toolchains>
    <!-- Java 8 JDK toolchain -->
    <toolchain>
        <type>jdk</type>
        <provides>
            <version>1.8</version>
            <vendor>oracle</vendor>
        </provides>
        <configuration>
            <!-- Location of a JDK8 in the Travis build environment -->
            <jdkHome>/usr/lib/jvm/java-8-oracle</jdkHome>
        </configuration>
    </toolchain>
    <!-- Java 9 JDK toolchain -->
    <toolchain>
        <type>jdk</type>
        <provides>
            <version>9</version>
            <vendor>oracle</vendor>
        </provides>
        <configuration>
            <!-- Location of a JDK9 in the Travis build environment -->
            <jdkHome>/usr/lib/jvm/java-9-oracle</jdkHome>
        </configuration>
    </toolchain>
</toolchains>