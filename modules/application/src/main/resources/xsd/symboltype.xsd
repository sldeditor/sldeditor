    <xs:include schemaLocation="paneldetails.xsd" />

    <xs:element name="XMLSymbolTypeConfig">
        <xs:annotation>
            <xs:documentation>
                Configuration of symbol types allowed for each type of panel
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Symbolizer" type="XMLSymbolizer" maxOccurs="unbounded" minOccurs="1" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>
 
    <xs:complexType name="XMLSymbolizer">
        <xs:sequence>
            <xs:element name="Value" type="XMLFieldConfigEnumValue" maxOccurs="unbounded" minOccurs="1" >
                <xs:annotation>
                    <xs:documentation>
                        List of enum values to display and field states
                    </xs:documentation>
                </xs:annotation>
            </xs:element>
        </xs:sequence>
        <xs:attribute type="xs:string" name="type" use="required" >
            <xs:annotation>
                <xs:documentation>
                    Full Java class name of panel details class that the options will be available for, e.g.
                        com.sldeditor.ui.detail.StrokeDetails
                        com.sldeditor.ui.detail.PointSymbolizerDetails
                        org.geotools.styling.PolygonSymbolizerImpl
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
    </xs:complexType>
</xs:schema>
