<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<SldEditor_test testsldfile="line/sld/line_optimizedstyledlabel.sld">
    <VendorOption>
        <ClassType>com.sldeditor.common.vendoroption.GeoServerVendorOption</ClassType>
        <Version>2.4.2</Version>
    </VendorOption>
    <PanelTests>
        <Setup expectedPanel="com.sldeditor.ui.detail.NamedLayerDetails">
            <Layer index="0"/>
        </Setup>
        <FieldTests>
            <LiteralString value="Optimized and styled label" field="NAME"/>
        </FieldTests>
    </PanelTests>
    <PanelTests>
        <Setup expectedPanel="com.sldeditor.ui.detail.StyleDetails">
            <Layer index="0"/>
            <Style index="0"/>
        </Setup>
        <FieldTests>
            <LiteralString value="SLD Cook Book: Optimized and styled label" field="TITLE"/>
        </FieldTests>
    </PanelTests>
    <PanelTests>
        <Setup expectedPanel="com.sldeditor.ui.detail.StrokeDetails">
            <FeatureTypeStyle index="0"/>
            <Layer index="0"/>
            <Rule index="0"/>
            <Style index="0"/>
            <Symbolizer index="0"/>
            <SymbolizerDetail index="0"/>
        </Setup>
        <FieldTests>
            <LiteralString value="solid" field="STROKE_STYLE"/>
            <LiteralDouble value="1.0" field="STROKE_WIDTH"/>
            <LiteralString value="#FF0000" field="STROKE_FILL_COLOUR"/>
        </FieldTests>
    </PanelTests>
    <PanelTests>
        <Setup expectedPanel="com.sldeditor.ui.detail.TextSymbolizerDetails">
            <FeatureTypeStyle index="0"/>
            <Layer index="0"/>
            <Rule index="0"/>
            <Style index="0"/>
            <Symbolizer index="1"/>
        </Setup>
        <FieldTests>
            <Attribute attribute="name" field="LABEL"/>
            <LiteralString value="#000000" field="FILL_COLOUR"/>
            <LiteralString value="Arial" field="FONT_FAMILY"/>
            <LiteralInt value="10" field="FONT_SIZE"/>
            <LiteralString value="normal" field="FONT_STYLE"/>
            <LiteralString value="bold" field="FONT_WEIGHT"/>
        </FieldTests>
    </PanelTests>
    <PanelTests>
        <Setup expectedPanel="com.sldeditor.ui.detail.TextSymbolizerDetails">
            <FeatureTypeStyle index="0"/>
            <Layer index="0"/>
            <Rule index="0"/>
            <Style index="0"/>
            <Symbolizer index="1"/>
        </Setup>
        <FieldTests>
            <LiteralString value="true" field="LABEL_FOLLOW_LINE"/>
            <LiteralDouble value="90.0" field="LABEL_MAX_ANGLE_DELTA"/>
            <LiteralInt value="400" field="LABEL_MAX_DISPLACEMENT"/>
            <LiteralInt value="150" field="LABEL_LABEL_REPEAT"/>
        </FieldTests>
    </PanelTests>
</SldEditor_test>
