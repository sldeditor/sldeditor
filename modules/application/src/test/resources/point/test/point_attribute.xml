        <Setup expectedPanel="com.sldeditor.ui.detail.NamedLayerDetails">
            <Layer index="0"/>
        </Setup>
        <FieldTests>
            <LiteralString value="Attribute-based point" field="NAME"/>
        </FieldTests>
    </PanelTests>
    <PanelTests>
        <Setup expectedPanel="com.sldeditor.ui.detail.StyleDetails">
            <Layer index="0"/>
            <Style index="0"/>
