            <LiteralDouble value="0.0" field="ANGLE"/>
            <Disabled field="GAP"/>
            <Disabled field="INITIAL_GAP"/>
            <LiteralDouble value="1.0" field="POINT_FILL_OPACITY"/>
        </FieldTests>
    </PanelTests>
    <PanelTests>
        <Setup expectedPanel="com.sldeditor.ui.detail.RuleDetails">
            <FeatureTypeStyle index="0"/>
            <Layer index="0"/>
            <Rule index="2"/>
