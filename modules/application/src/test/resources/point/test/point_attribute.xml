            <FeatureTypeStyle index="0"/>
            <Layer index="0"/>
            <Rule index="0"/>
            <Style index="0"/>
        </Setup>
        <FieldTests>
            <LiteralString value="SmallPop" field="NAME"/>
            <LiteralString value="1 to 50000" field="TITLE"/>
            <Expression expression="[ pop &lt; 50000 ]" field="FILTER"/>
        </FieldTests>
    </PanelTests>
