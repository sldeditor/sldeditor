            <LiteralString value="50000 to 100000" field="TITLE"/>
            <Expression expression="[[ pop &gt;= 50000 ] AND [ pop &lt; 100000 ]]" field="FILTER"/>
        </FieldTests>
    </PanelTests>
    <PanelTests>
        <Setup expectedPanel="com.sldeditor.ui.detail.PointFillDetails">
