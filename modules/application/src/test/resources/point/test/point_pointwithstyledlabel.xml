            <LiteralDouble value="0.0" field="ANCHOR_POINT_V"/>
            <LiteralDouble value="0.0" field="DISPLACEMENT_X"/>
            <LiteralDouble value="5.0" field="DISPLACEMENT_Y"/>
            <LiteralDouble value="0.0" field="ANGLE"/>
        </FieldTests>
