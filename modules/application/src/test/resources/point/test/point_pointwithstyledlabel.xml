            <Layer index="0"/>
        </Setup>
        <FieldTests>
            <LiteralString value="Point with styled label" field="NAME"/>
        </FieldTests>
    </PanelTests>
    <PanelTests>
        <Setup expectedPanel="com.sldeditor.ui.detail.StyleDetails">
            <Layer index="0"/>
            <Style index="0"/>
        </Setup>
        <FieldTests>
            <LiteralString value="GeoServer SLD Cook Book: Point with styled label" field="TITLE"/>
        </FieldTests>
    </PanelTests>
